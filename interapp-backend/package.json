{
  "name": "interapp-backend",
  "version": "0.4.1",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prettier": "prettier --write . '!./pgdata'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings 0",
    "test": "NODE_ENV=test bun test tests/* --env-file tests/config/.env.test --timeout 10000",
    "test:api": "NODE_ENV=test bun test tests/api/* --env-file tests/config/.env.test --timeout 10000",
    "test:unit": "NODE_ENV=test bun test tests/constants.test.ts tests/unit/* --env-file tests/config/.env.test --coverage --timeout 5000",
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:generate": "sh ./scripts/typeorm_generate.sh",
    "typeorm:run": "typeorm-ts-node-esm migration:run -d db/data_source.ts",
    "typeorm:revert": "typeorm-ts-node-esm migration:revert -d db/data_source.ts",
    "typeorm:show": "typeorm-ts-node-esm migration:show -d db/data_source.ts",
    "typeorm:drop": "typeorm-ts-node-esm schema:drop -d db/data_source.ts",
    "typeorm:sync": "typeorm-ts-node-esm schema:sync -d db/data_source.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/bun": "^1.0.8",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/nodemailer-express-handlebars": "^4.0.5",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript-eslint": "^7.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.4",
    "jose": "^5.1.1",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-xlsx": "^0.23.0",
    "nodemailer": "^6.9.7",
    "nodemailer-express-handlebars": "^6.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "zod": "^3.22.4"
  }
}
